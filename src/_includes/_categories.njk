<ul class="
  categories
  {% if categoriesOptions.theme %}
  categories--{{ categoriesOptions.theme }}
  {% endif %}
  {% if categoriesOptions.links == false %}
  categories--no-links
  {% endif %}
">
  {% for category in post.data.categories %}
    <li class="categories__item">
      {% if categoriesOptions.links != false %}
        <a href="/categoria/{{ category | slug }}/" class="categories__link">
      {% endif %}
        {{ category }}
      {% if categoriesOptions.links != false %}
        </a>
      {% endif %}
    </li>
  {% endfor %}

  {% if post.data.make %}
    <li class="categories__item">
      {% if categoriesOptions.links != false %}
        <a href="/marca/{{ post.data.make | slug }}/" class="categories__link">
      {% endif %}
        {{ post.data.make }}
      {% if categoriesOptions.links != false %}
        </a>
      {% endif %}
    </li>
  {% endif %}
</ul>
