{% set articlesTotal = collections.post.length %}
{% set makesTotal = collections.post | getMakes() | length %}
{% set photosTotal = collections.post | getTotalPhotos() %}

<ul class="stats" data-controller="stats">
  <li class="stats__item">
    <span class="stats__number">{{ articlesTotal }}</span>
    <span class="stats__label">Artigos</span>
  </li>
  <li class="stats__item">
    <span class="stats__number">{{ makesTotal }}</span>
    <span class="stats__label">Fabricantes</span>
  </li>
  <li class="stats__item">
    <span class="stats__number">{{ photosTotal }}</span>
    <span class="stats__label">Fotos</span>
  </li>
  <li class="stats__item">
    <span class="stats__number" data-stats-target="subscribersTotal">0</span>
    <span class="stats__label">Subscritores</span>
  </li>
</ul>
