---
layout: base
bodyClass: legal
pageCss: legal
---
<article class="legal__article">
  <section class="legal__content">
    <div class="wrapper">
      <header class="legal__header">
        <p class="legal__date">{{ date | local_date }}</p>
        <h1 class="legal__title">{{ title }}</h1>
      </header>

      <div class="legal__body">
        {{ content | safe }}
      </div>
    </div>
  </section>
</article>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "headline": "{{ title }}",
  "author": {
    "@type": "Organization",
    "name": "Semanticar",
    "url": "{{ site.url }}"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Semanticar",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/static_assets/images/metadata/logo-180.png"
    }
  },
  "datePublished": "{{ date.toISOString() }}"
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "{{ title }}",
      "item": "{{ site.url }}{{ page.url }}"
    }
  ]
}
</script>
