---
layout: base
bodyClass: post
pageCss: post
---
<article class="post__article">
  <div class="post__progress" data-app-target="progressBar"></div>

  <div class="post__image-wrapper">
    {% image
      cover,
      title,
      "100vw",
      "post__image",
      false
    %}
  </div>

  {% include "_header.njk" %}

  {% if make %}
    {% include "_highlights.njk" %}
  {% endif %}

  <section class="post__content">
    <div class="wrapper">
      <p class="post__excerpt">
        {{ excerpt }}
      </p>
      <div class="post__body">
        {{ content | safe }}
      </div>

      {% include "_share.njk" %}

      {% if make %}
        {% include "_sidebar.njk" %}
      {% endif %}
    </div>
  </section>
</article>

{# This is not currently part of nunjucks documentation, but we need it because of the `image` tag #}
{% ifAsync photos.length > 0 %}
  {% include "_gallery.njk" %}
{% endif %}

{% include "_subscribe-banner.njk" %}

{% set category = tags[1] %}
{% set posts = collections.post | without(page) | whereList('tags', category) | reverse %}
{% set posts = posts.slice(0, 4) %}

{% ifAsync posts.length > 0 %}
  <div class="related">
    <div class="wrapper">
      <div class="related__inner">
        <p class="related__title">Outros artigos da categoria</p>

        {% set categoriesOptions = { wantsMake: false } %}
        {% include "_categories.njk" %}
      </div>
    </div>

    {% include "_post-grid.njk" %}
  </div>
{% endif %}

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ site.url }}{{ page.url }}"
  },
  "headline": "{{ title }}",
  "description": "{{ excerpt }}",
  "image": "{{ cover | image_url }}",
  "author": {
    "@type": "Person",
    "name": "Pedro Pinto",
    "url": "https://pedropinto.me"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Semanticar",
    "logo": {
      "@type": "ImageObject",
      "url": "{{ site.url }}/static_assets/images/metadata/logo-180.png"
    }
  },
  "datePublished": "{{ date.toISOString() }}"
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "{{ tags[1] }}",
    "item": "{{ site.url }}/{{ tags[1] | slugify }}/"
  },{
    "@type": "ListItem",
    "position": 2,
    "name": "{{ title }}",
    "item": "{{ site.url }}{{ page.url }}"
  }]
}
</script>
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Artigos da categoria “{{ category }}”",
  "itemListElement": [
    {% for post in posts %}
    {
      "@type": "ListItem",
      "position": {{ loop.index }},
      "url": "{{ site.url }}{{ post.url }}",
      "name": "{{ post.data.title }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}
</script>
