{
  "name": "semanticar",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm-run-all build:*",
    "clean": "rm -rf dist",
    "eleventy": "npx @11ty/eleventy",
    "esbuild": "esbuild src/assets/javascript/scripts.js --bundle --outfile=src/static_assets/javascript/bundle.js",
    "sass": "sass --style=compressed --color ./src/assets/scss/styles.scss:./src/static_assets/css/styles.css ./src/assets/scss/pages/:./src/static_assets/css/pages/",
    "autoprefixer": "npx postcss 'src/static_assets/css/**/*.css' --base src/static_assets/css --use autoprefixer --ext css --dir 'src/static_assets/css/' --verbose",
    "start": "npm-run-all sass esbuild --parallel watch:*",
    "build:eleventy": "npm run eleventy",
    "build:esbuild": "npm run esbuild -- --minify --define:process.env.ENV=\\\"production\\\"",
    "build:sass": "npm run sass -- --stop-on-error",
    "build:autoprefixer": "npm run autoprefixer",
    "build:copy_static_assets": "mkdir -p ./dist/static_assets/ && cp -a ./src/static_assets/. ./dist/static_assets/",
    "watch:eleventy": "npm run clean && npm run eleventy -- --serve --port=8080",
    "watch:esbuild": "npm run esbuild -- --watch --sourcemap --define:process.env.ENV=\\\"development\\\"",
    "watch:sass": "npm run sass -- --watch && npm run autoprefixer",
    "watch:autoprefixer": "npm run autoprefixer -- --watch"
  },
  "keywords": [],
  "author": "Pedro Pinto",
  "license": "ISC",
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "esbuild": "^0.8.46",
    "eslint": "^8.27.0",
    "eslint-plugin-import": "^2.22.1",
    "npm-run-all": "^4.1.5",
    "stylelint": "^15.6.1",
    "stylelint-config-recommended-scss": "^11.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-scss": "^5.0.0"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "autoprefixer": "^10.4.13",
    "markdown-it": "^13.0.1",
    "markdown-it-link-attributes": "^4.0.1",
    "normalize.css": "^8.0.1",
    "postcss": "^8.4.19",
    "postcss-cli": "^10.0.0",
    "sass": "^1.32.5"
  }
}
